<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-image: url(/Images/GUI/menu.png); -fx-background-size: 100% 100%;" stylesheets="@Style/Styles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox fx:id="vBox" alignment="CENTER" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <BorderPane prefHeight="100.0">
               <center>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="100.0" text="Start Menu" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Bauhaus 93" size="72.0" />
                     </font>
                  </Label>
               </center>
            </BorderPane>
            <BorderPane prefHeight="100.0">
               <center>
                  <Button mnemonicParsing="false" onAction="#newGameClick" styleClass="custom-button" text="New Game">
                     <font>
                        <Font name="Arial Black" size="30.0" />
                     </font>
                  </Button>
               </center>
            </BorderPane>
            <BorderPane prefHeight="100.0">
               <center>
                  <Button mnemonicParsing="false" onAction="#optionsClick" styleClass="custom-button" text="Options">
                     <font>
                        <Font name="Arial Black" size="30.0" />
                     </font>
                  </Button>
               </center>
            </BorderPane>
            <BorderPane prefHeight="100.0">
               <center>
                  <Button mnemonicParsing="false" onAction="#exitClick" styleClass="custom-button" text="Exit">
                     <font>
                        <Font name="Arial Black" size="30.0" />
                     </font>
                  </Button>
               </center>
            </BorderPane>
         </children>
         <effect>
            <Glow />
         </effect>
      </VBox>
   </center>
   <left>
      <AnchorPane prefHeight="0.0" prefWidth="250.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
