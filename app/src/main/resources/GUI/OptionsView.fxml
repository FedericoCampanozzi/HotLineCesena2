<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #352063;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#backClick" text="Back" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Arial Black" size="20.0" />
               </font>
            </Button>
         </right>
         <BorderPane.margin>
            <Insets bottom="20.0" right="20.0" />
         </BorderPane.margin>
      </BorderPane>
   </bottom>
   <top>
      <BorderPane>
         <center>
            <Label alignment="CENTER" text="Options" textFill="WHITE" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Arial Black" size="48.0" />
               </font>
            </Label>
         </center>
      </BorderPane>
   </top>
   <center>
      <TabPane prefHeight="279.0" prefWidth="600.0" style="-fx-background-color: transparent;" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab id="audioTab" closable="false" text="Audio">
               <content>
                  <VBox fx:id="audioVBox" alignment="CENTER" prefHeight="261.0" prefWidth="598.0">
                     <children>
                        <BorderPane>
                           <center>
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="600.0" text="Volume" textFill="WHITE">
                                       <font>
                                          <Font name="Arial Black" size="24.0" />
                                       </font>
                                    </Label>
                                    <Slider fx:id="volSlider" minorTickCount="4" onKeyPressed="#volSliderValueChanged" onMouseClicked="#volSliderValueChanged" onMouseDragged="#volSliderValueChanged" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="50.0">
                                       <padding>
                                          <Insets left="20.0" right="20.0" />
                                       </padding>
                                    </Slider>
                                 </children>
                              </VBox>
                           </center>
                        </BorderPane>
                        <BorderPane>
                           <center>
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <RadioButton fx:id="musicRadioButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#musicRDClick" selected="true" text="Enable music" textFill="WHITE">
                                       <font>
                                          <Font name="Arial Black" size="20.0" />
                                       </font>
                                    </RadioButton>
                                    <RadioButton fx:id="soundsRadioButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#soundsRDClick" selected="true" text="Enable sounds" textFill="WHITE">
                                       <font>
                                          <Font name="Arial Black" size="20.0" />
                                       </font>
                                    </RadioButton>
                                 </children>
                              </VBox>
                           </center>
                        </BorderPane>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
          </Tab>
          <Tab id="graphicTab" closable="false" text="Graphic">
               <content>
                  <VBox fx:id="graphicVBox" alignment="CENTER" prefHeight="250.0" prefWidth="600.0" spacing="20.0">
                     <children>
                        <RadioButton fx:id="fullScreenRadioButton" mnemonicParsing="false" onAction="#fullScreenRadioButtonChangedState" text="Full screen" textFill="WHITE">
                           <font>
                              <Font name="Arial Black" size="20.0" />
                           </font>
                        </RadioButton>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
          </Tab>
            <Tab id="controlsTab" closable="false" text="Controls" />
        </tabs>
      </TabPane>
   </center>
</BorderPane>
